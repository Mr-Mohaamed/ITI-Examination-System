@using ExamProject.Models.DTOs.CoursesDTOs
@model IEnumerable<IndexCourseDTO>

@{
    ViewBag.Title = "Courses";
}

<h2 class="mb-4">All Courses</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Course</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@course.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
