@using ExamProject.Models.DTOs.TopicDTOs
@model IEnumerable<IndexTopicDTO>
<div>
    <h1>Topics</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model)
            {
                <tr>
                    <td>@topic.Id</td>
                    <td>@topic.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@topic.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@topic.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@topic.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create">Create New Topic</a>

</div>