@using ExamProject.Models.DTOs.StudentDTOs
@model StudentCoursesDTO
@{
    ViewData["Title"] = "Create Exam";
    var courses = new SelectList(Model.Courses, "CourseId", "CourseName");
}
<h1>Create Exam</h1>

<div>
    <h2>Student Information</h2>
    <p>
        <strong>Name:</strong> @Model.StudentName
    </p>
    <h2>Select Course</h2>
    <form asp-action="CreateExam" method="post" asp-route-id="StudentId">
        <input type="hidden" asp-for="StudentId" />
        <div class="form-group">
            <label asp-for="Courses"></label>
            <select name="CourseId" class="form-control" asp-items="courses"></select>
            <span asp-validation-for="Courses" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>