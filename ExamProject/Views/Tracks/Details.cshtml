@using ExamProject.Models.DTOs.TrackDTOs
@model GetTrackDTO

@{
    ViewData["Title"] = "Track Details";
}

<h2>@Model.Name</h2>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Duration:</strong> @Model.Duration hours</p>

<h3>Branches</h3>
@foreach (var branch in Model.Branches)
{
    <div class="card mb-3 p-3 border">
        <h4>@branch.BranchName</h4>
        <p><strong>Number of Students:</strong> @branch.numberOfStudents</p>

        @if (branch.Students.Any())
        {
            <ul>
                @foreach (var student in branch.Students)
                {
                    <li>@student.StudentName</li>
                }
            </ul>
        }
        else
        {
            <p>No students enrolled.</p>
        }
    </div>
}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Course Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td><a asp-controller="courses" asp-action="Details" asp-route-id="@course.CourseId">@course.CourseName</a></td>
            </tr>
        }
    </tbody>
</table>
