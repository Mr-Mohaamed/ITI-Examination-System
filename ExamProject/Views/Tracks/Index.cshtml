@using ExamProject.Models.DTOs.TrackDTOs
@model IEnumerable<IndexTrackDTO>

@{
    ViewBag.Title = "Tracks";
}

<h2 class="mb-4">All Tracks</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Track</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Duration</th>
            <th>Branch Counts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var track in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@track.Id">@track.Name</a>
                </td>
                <td>
                    @track.Duration
                </td>
                <td>
                    @track.BranchesCount
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@track.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@track.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
